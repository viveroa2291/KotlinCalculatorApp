<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/calculationsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/resultsTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/resultsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/clearButton"
            android:onClick="clearAction"
            android:text="Clear"/>
        <Button
            style="@style/buttonNumber"
            android:text="delete"
            android:id="@+id/deleteButton"
            android:onClick="deleteAction" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/exponentButton"
            android:text="^" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/divideButton"
            android:text="/" />
    </LinearLayout>
    <LinearLayout
       style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="1"/>
        <Button
            style="@style/buttonNumber"
            android:text="2" />
        <Button
            style="@style/buttonNumber"
            android:text="3" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/multiplicationButton"
            android:text="*" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="4"/>
        <Button
            style="@style/buttonNumber"
            android:text="5" />
        <Button
            style="@style/buttonNumber"
            android:text="6" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/additionButton"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:text="7"/>
        <Button
            style="@style/buttonNumber"
            android:text="8" />
        <Button
            style="@style/buttonNumber"
            android:text="9" />
        <Button
            style="@style/buttonOperator"
            android:id="@+id/subtractionButton"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            style="@style/buttonNumber"
            android:id="@+id/decimalButton"
            android:text="."/>
        <Button
            style="@style/buttonNumber"
            android:text="0" />
        <Button
            style="@style/buttonNumber"
            android:layout_weight="2"
            android:id="@+id/equalsButton"
            android:background="@color/orange"
            android:textSize="40sp"
            android:onClick="equalAction"
            android:text="=" />
    </LinearLayout>
</LinearLayout>